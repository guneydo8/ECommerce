@model EntityLayer.Entity.Admin
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12">
    <div class="iq-edit-list-data">
        <div class="tab-content">
            <div class="tab-pane fade active show" id="personal-information" role="tabpanel">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Yönetici Bilgileri Güncelleme Sayfası</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Update", "Admin", FormMethod.Post))
                        {



                            <div class=" row align-items-center">
                                <div class="form-group col-sm-6">
                                    <label for="fname">Ad:</label>

                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="lname">Soyad:</label>
                                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                                </div>


                            </div>
                            <div class="form-group">
                                <label for="cpass">Eski Şifre:</label>
                                <a href="/AdminLogin/Recovery/" class="float-right">Şifremi Unuttum</a>
                                <input type="Password" class="form-control" name="Password" id="cpass" value="">
                            </div>
                            <div class="form-group">
                                <label for="npass">Yeni Şifre:</label>
                                <input type="Password" class="form-control" name="newPassword" id="npass" value="">
                            </div>
                            <div class="form-group">
                                <label for="vpass">Yeni Şifre Doğrulama:</label>
                                <input type="Password" class="form-control" name="validationPassword" id="vpass" value="">
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                            <button type="reset" class="btn iq-bg-danger">İptal</button>
                        }
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>



@if (ViewBag.errormessage != null)
