@using EntityLayer.Entity
@model List<ProductCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">@ViewBag.message</h4>
        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table id="datatable" class="table data-table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Görsel</th>
                        <th>Eklenme Tarihi</th>
                        <th>Güncellenme Tarihi</th>



                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>


                            <td>@item.Title</td>
                            <td><img src="@item.ImageUrl" alt="profile" class="img-fluid rounded avatar-40 text-center"></td>
                            <td>@item.CreatedTime.ToString("f")</td>
                            <td>@item.UpdatedTime.ToString("f")</td>



                            <td>
                                <div class="dropdown">
                                    <span class="dropdown-toggle1" id="dropdownMenuButton8" data-toggle="dropdown">
                                        <i class="ri-more-2-fill"></i>
                                    </span>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton8" style="">
                                        <a class="dropdown-item" href="/ProductCategory/View/@item.Id"><i class="ri-eye-fill mr-2"></i>Ürünleri Gör</a>
                                        <a class="dropdown-item" href="/ProductCategory/Delete/@item.Id" onclick="return confirm('Silmek istediğinize emin misiniz?')"><i class="ri-delete-bin-6-fill mr-2"></i>Sil</a>
                                        <a class="dropdown-item" href="/ProductCategory/Update/@item.Id"><i class="ri-pencil-fill mr-2"></i>Güncelle</a>
                                        <a class="dropdown-item" href="#"><i class="ri-printer-fill mr-2"></i>Print</a>
                                        <a class="dropdown-item" href="#"><i class="ri-file-download-fill mr-2"></i>Download</a>
                                    </div>
                                </div>
                                @*<a href="/ProductCategory/Update/@item.Id"><i class="icon feather icon-edit f-w-600 f-16 m-r-15 text-c-green"></i></a>*@
                                @*<a href="/ProductCategory/Update/@item.Id" class="btn btn-secondary mt-2"><i class="ri-star-fill pr-0"></i></a>*@
                                @*<a href="/ProductCategory/Delete/@item.Id" onclick="return confirm('Silmek istediğinize emin misiniz?')"><i class="feather icon-trash-2 f-w-600 f-16 text-c-red"></i></a>*@
                            </td>

                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>





<a href="/ProductCategory/Add/" class="btn btn-outline-dark rounded-pill mt-2"><i class="ri-add-line"></i>Kategori Ekle</a>