@model WebUILayer.Models.SalesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">@ViewBag.message</h4>
        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive">
            <table id="datatable" class="table data-table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ürün Görsel</th>

                        <th>Ürün Adı</th>
                        <th>Müşteri</th>


                        <th>Marka</th>

                        <th>Kategori</th>

                        <th>Birim Fiyat</th>

                        <th>Adet</th>

                        <th>Toplam Fiyat</th>

                        <th>Satış Tarihi</th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var item in Model.SalesItems)
                    {
                        var image = item.ProductImages.FirstOrDefault();
                        <tr>




                            <td><img src="@image.ImageUrl" alt="No Image"  class="img-fluid rounded avatar-40 text-center"></td>

                            <td>@item.Product.Title</td>
                            <td>@item.Sale.EndUser.Name @item.Sale.EndUser.Surname</td>

                            <td>@item.Product.ProductBrand.Title</td>

                            <td>@item.Product.ProductCategory.Title</td>

                            <td>@item.Product.Price</td>

                            <td>@item.Sale.Quantity</td>

                            <td>@item.Sale.Total</td>
                            <td>@item.Sale.CreatedTime</td>

                        </tr>

                    }

                </tbody>

            </table>
        </div>
    </div>
</div>



