@using EntityLayer.Entity
@model List<ContactInformation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<div class="main-container container">
    @if (ViewBag.message != null)
    {
        <div id="show-alert" class="alert alert-danger" role="alert">
            @ViewBag.message
        </div>
    }


    <div class="row">
        <div id="content" class="col-sm-12">
            <div class="page-title">
                <h2>Bizimle İletişime Geçin</h2>
            </div>
         
            <iframe src="@ViewBag.mapurl" width="100%" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
            <div class="info-contact clearfix">
                <div class="col-lg-4 col-sm-4 col-xs-12 info-store">
                    <div class="row">
                        <div class="name-store">
                            <h3>İletişim Bilgilerimiz</h3>
                        </div>
                        @foreach (var item in Model)
                        {


                            <address>
                                <div class="address clearfix form-group">
                                    <div class="icon">
                                        <i class="fa fa-home"></i>
                                    </div>
                                    <div class="text">@item.Country-@item.City</div>
                                </div>

                                <div class="address clearfix form-group">
                                    <div class="icon">
                                        <i class="fa fa-map-marker"></i>
                                    </div>
                                    <div class="text">@item.Adress</div>
                                </div>
                                <div class="phone form-group">
                                    <div class="icon">
                                        <i class="fa fa-phone"></i>
                                    </div>
                                    <a style="color: #555555" href="tel:@item.Phone"><div class="text">Telefon : @item.Phone</div></a>
                                    
                                </div>
                                <div class="phone form-group">
                                    <div class="icon">
                                        <i class="fa fa-envelope"></i>
                                    </div>
                                    <a style="color: #555555" href="mailto:@item.Email"><div class="text">Mail : @item.Email</div></a>
                                    
                                </div>
                            </address>
                        }
                    </div>
                </div>
                <div class="col-lg-8 col-sm-8 col-xs-12 contact-form">
                    <form method="post" enctype="multipart/form-data" class="form-horizontal">
                        <fieldset>
                            <legend>Bizimle İletişime Geçin</legend>


                            @if (ViewBag.user != null)
                            {

                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-name">Ad</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="Name" value="@ViewBag.user.Name" readonly="" id="input-name" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-name">Soyad</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="Surname" value="@ViewBag.user.Surname" readonly="" id="input-name" class="form-control">
                                    </div>
                                </div>



                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-name">Mail</label>
                                    <div class="col-sm-10">
                                        <input type="email" name="Email" value="@ViewBag.user.Email" readonly="" id="input-name" class="form-control">
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-name">Ad</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="Name" required="" value="" id="input-name" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-name">Soyad</label>
                                    <div class="col-sm-10">
                                        <input type="text" required="" name="Surname" value="" id="input-name" class="form-control">
                                    </div>
                                </div>

                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="input-name">Mail</label>
                                    <div class="col-sm-10">
                                        <input type="email" required="" name="Email" value="" id="input-name" class="form-control">
                                    </div>
                                </div>

                            }
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-email">Konu</label>
                                <div class="col-sm-10">
                                    <input type="text" name="Title" required="" value="" id="input-email" class="form-control">
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-enquiry">Mesajınız</label>
                                <div class="col-sm-10">
                                    <textarea name="Description" required="" rows="10" id="input-enquiry" class="form-control"></textarea>
                                </div>
                            </div>
                        </fieldset>
                        <div class="buttons">
                            <div class="pull-right">
                                <button class="btn btn-default buttonGray" type="submit">
                                    <span>Gönder</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        var alert = document.querySelector("#show-alert");
        setTimeout(() => {
            alert.remove();
        }, 2000);
</script>
